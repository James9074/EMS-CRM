.span12.well
  %h2
    Welcome to your Dashboard, 
    - if current_user.try(:admin)
      Admin
    - else
      = user
  .nav-collapse.collapse
  %ul.nav
    %li.dropdown{:style => "width: 100px;"}
      %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"} 
        Filter By User
        %b.caret
      %ul.dropdown-menu{"role" => "menu"}
        %li
        - prevRole = User.all.order_by(organization_role: :asc).first.organization_role
        &nbsp; #{prevRole}
        %br
        - User.all.order_by(organization_role: :asc).each do |user|
          - if user.name != "Lane Baucom"
            - if prevRole != user.organization_role
              &nbsp; #{user.organization_role}
              %br
            %a{:href => "?user="+user.name}  &nbsp; &nbsp; &nbsp; #{user.name}
            - prevRole = user.organization_role
            %br
    %li.dropdown{:style => "width: 100px;"}
      %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"} 
        Filter By Role
        %b.caret
      %ul.dropdown-menu{"role" => "menu"}
        %li
        - User.roles.each do |role,y|
          %a{:href => "?role="+role} #{role}
          %br

  %hr
  - @users.each do |user|
    - if !user.is_admin?
      %table.table.table-striped
        %thead
          %h3 Task List - #{user.name}
          %tr
            %th
              Task Name
            %th
              Due Date
            %th
              Assigned To
            %th
              Type
            %th{:style => "width:27%;"}
              Number Completed
            %th
              Actions
        %tbody
          - @tasks.each do |task|
            - if task.assigned_to == user.name
              %tr{:class => (task.complete? ? "complete" : "incomplete")}
                %td
                  = link_to task.task_name, task_path(task), id: 'edit'
                %td
                  = task.due_date.to_s.capitalize
                %td
                  = task.assigned_to
                %td
                  = task.task_type.to_s.capitalize
                %td
                  %div{:class => "task_list_completed"}
                    = task.number_completed
                    = '/'
                    = task.number_to_complete
                  = progress_bar((task.number_completed.to_f/task.number_to_complete.to_f)*100, :color => 'blue', :rounded => true)
                %td
                  = link_to '', task_path(task), class: 'icon-edit', id: 'edit'
                  - if current_user.is_admin?
                    = link_to '', task_path(task), method: 'delete', class: 'icon-trash', data: { confirm: 'Are you sure that you want to delete this task?'}, id: 'delete'