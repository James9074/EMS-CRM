.span12.well
  .functions.pull-right
    - if current_user.is_admin?
      = link_to 'Create Task', new_task_path, class: 'btn'

  %table.table.table-striped
    %thead
      %h3 Task List
      %tr
        %th
          = link_to "Task Name", :sort => "task_name", :order => "asc" if params[:order] != 'asc'
          = link_to "Task Name", :sort => "task_name", :order => "desc" if params[:order] == 'asc'
        %th
          = link_to "Due Date", :sort => "due_date", :order => "asc" if params[:order] != 'asc'
          = link_to "Due Date", :sort => "due_date", :order => "desc" if params[:order] == 'asc'
        %th
          = link_to "Assigned To", :sort => "assigned_to", :order => "asc" if params[:order] != 'asc'
          = link_to "Assigned To", :sort => "assigned_to", :order => "desc" if params[:order] == 'asc'
        %th
          = link_to "Task Type", :sort => "task_type", :order => "asc" if params[:order] != 'asc'
          = link_to "Task Type", :sort => "task_type", :order => "desc" if params[:order] == 'asc'
        %th{:style => "width:27%;"}
          = link_to "Number Completed", :sort => "number_completed", :order => "asc" if params[:order] != 'asc'
          = link_to "Number Completed", :sort => "number_completed", :order => "desc" if params[:order] == 'asc'
        %th{:class => "actions"}
          Actions
    %tbody
      - @tasks.each do |task|
        %tr{:class => (task.complete? ? "complete" : "incomplete")}
          %td
            = link_to task.task_name, task_path(task), id: 'edit'
          %td
            = task.due_date.to_s.capitalize
          %td
            = task.assigned_to
          %td
            = task.task_type.to_s.capitalize
          %td
            %div{:class => "task_list_completed"}
              = task.number_completed
              = '/'
              = task.number_to_complete
            = progress_bar((task.number_completed.to_f/task.number_to_complete.to_f)*100, :color => 'blue', :rounded => true)
          %td
            = link_to '', task_path(task), class: 'icon-edit', id: 'edit'
            - if current_user.is_admin?
              = link_to '', task_path(task), method: 'delete', class: 'icon-trash', id: 'delete'
              -# = link_to '', task_path(task), method: 'delete', class: 'icon-trash', data: { confirm: 'Are you sure that you want to delete this task?'}, id: 'delete'